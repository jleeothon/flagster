<h2>Choose!</h2>

<%= form_tag cluster_path, method: "get" do %>
    <div class="container-fluid countries">
        <% closed = false %>
        <% @countries.each.with_index do |c, i| %>
            <% if i % 6 == 0 %>
                <% closed = false %>
                <div class="row">
            <% end -%>
            <div class="col-xs-6 col-md-4">
                <%= check_box_tag c.name %>
                <%= label_tag c.name %>
                <%= image_tag("#{c.iso}.gif") if c.iso %>
            </div>
            <% if i % 6 == 5 %>
                <% closed = true %>
                </div> <!-- close row -->
            <% end -%>
        <% end -%>
        <% if not closed %>
            </div> <!-- close row -->
        <% end -%>


        <div class="row">
            <div class="col-md-4">
              <%= submit_tag 'Cluster!' %>
            </div>
        </div>
    </div>
<% end %>
